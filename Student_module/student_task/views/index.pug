
doctype html
html
  head
    include includes/header.pug
  body.skin-black
    // header logo: style can be found in header.less 
    header.header
      a.logo(href='index.html')
        // Add the class icon to your logo image or logo icon to add the margining 
        |  AdminLTE 
      // Header Navbar: style can be found in header.less 
      include includes/sidebar.pug
      aside.right-side
        // Content Header (Page header) 
        section.content-header
          h1
            | Dashboard 
            small Control panel
          ol.breadcrumb
            li
            li.active Dashboard
        // Main content 
        section.content
          // Small boxes (Stat box) 
          .row
            .col-lg-3.col-xs-6
              // small box 
              .small-box.bg-aqua
                .inner
                  h3 150
                  p New Orders
                .icon
                a.small-box-footer(href='#')
                  | More info 
                  i.fa.fa-arrow-circle-right
            // ./col 
            .col-lg-3.col-xs-6
              // small box 
              .small-box.bg-green
                .inner
                  h3
                    | 53
                    sup(style='font-size: 20px') %
                  p Bounce Rate
                .icon
                a.small-box-footer(href='#')
                  | More info 
                  i.fa.fa-arrow-circle-right
            // ./col 
            .col-lg-3.col-xs-6
              // small box 
              .small-box.bg-yellow
                .inner
                  h3 44
                  p User Registrations
                .icon
                a.small-box-footer(href='#')
                  | More info 
                  i.fa.fa-arrow-circle-right
            // ./col 
            .col-lg-3.col-xs-6
              // small box 
              .small-box.bg-red
                .inner
                  h3 65
                  p Unique Visitors
                .icon
                a.small-box-footer(href='#')
                  | More info 
                  i.fa.fa-arrow-circle-right
            // ./col 
          // /.row 
          // top row 
          .row
            .col-xs-12.connectedSortable
            // /.col 
          // /.row 
          // Main row 
          .row
            // Left col 
            section.col-lg-6.connectedSortable
              // Box (with bar chart) 
              #loading-example.box.box-danger
                .box-header
                  // tools box 
                  .pull-right.box-tools
                    button.btn.btn-danger.btn-sm.refresh-btn(data-toggle='tooltip', title='Reload')
                    |  
                    button.btn.btn-danger.btn-sm(data-widget='collapse', data-toggle='tooltip', title='Collapse')
                    |  
                    button.btn.btn-danger.btn-sm(data-widget='remove', data-toggle='tooltip', title='Remove')
                  // /. tools 
                  |  
                  i.fa.fa-cloud
                  h3.box-title Server Load
                // /.box-header 
                .box-body.no-padding
                  .row
                    .col-sm-7
                      // bar chart 
                      #bar-chart.chart(style='height: 250px')
                    .col-sm-5
                      .pad
                        // Progress bars 
                        .clearfix
                          span.pull-left Bandwidth
                          |  
                          small.pull-right 10/200 GB
                        .progress.xs
                        .clearfix
                          span.pull-left Transfered
                          |  
                          small.pull-right 10 GB
                        .progress.xs
                        .clearfix
                          span.pull-left Activity
                          |  
                          small.pull-right 73%
                        .progress.xs
                        .clearfix
                          span.pull-left FTP
                          |  
                          small.pull-right 30 GB
                        .progress.xs
                        // Buttons 
                        p
                      // /.pad 
                    // /.col 
                  // /.row - inside box 
                // /.box-body 
                .box-footer
                  .row
                    .col-xs-4.text-center(style='border-right: 1px solid #f4f4f4')
                      input.knob(type='text', data-readonly='true', value='80', data-width='60', data-height='60', data-fgcolor='#f56954')
                      .knob-label CPU
                    // ./col 
                    .col-xs-4.text-center(style='border-right: 1px solid #f4f4f4')
                      input.knob(type='text', data-readonly='true', value='50', data-width='60', data-height='60', data-fgcolor='#00a65a')
                      .knob-label Disk
                    // ./col 
                    .col-xs-4.text-center
                      input.knob(type='text', data-readonly='true', value='30', data-width='60', data-height='60', data-fgcolor='#3c8dbc')
                      .knob-label RAM
                    // ./col 
                  // /.row 
                // /.box-footer 
              // /.box 
              // Custom tabs (Charts with tabs)
              .nav-tabs-custom
                // Tabs within a box 
                ul.nav.nav-tabs.pull-right
                  li.active
                  li
                  li.pull-left.header
                    i.fa.fa-inbox
                    |  Sales
                .tab-content.no-padding
                  // Morris chart - Sales 
                  #revenue-chart.chart.tab-pane.active(style='position: relative; height: 300px')
                  #sales-chart.chart.tab-pane(style='position: relative; height: 300px')
              // /.nav-tabs-custom 
              // Calendar 
              .box.box-warning
                .box-header
                  i.fa.fa-calendar
                  .box-title Calendar
                  // tools box 
                  .pull-right.box-tools
                    // button with a dropdown 
                    .btn-group
                      button.btn.btn-warning.btn-sm.dropdown-toggle(data-toggle='dropdown')
                      ul.dropdown-menu.pull-right(role='menu')
                        li
                        li
                        li.divider
                        li
                  // /. tools 
                // /.box-header 
                .box-body.no-padding
                  //The calendar 
                  #calendar
                // /.box-body 
              // /.box 
              // quick email widget 
              .box.box-info
                .box-header
                  i.fa.fa-envelope
                  h3.box-title Quick Email
                  // tools box 
                  .pull-right.box-tools
                  // /. tools 
                .box-body
                .box-footer.clearfix
            // /.Left col 
            // right col (We are only adding the ID to make the widgets sortable)
            section.col-lg-6.connectedSortable
              // Map box 
              .box.box-primary
                .box-header
                  // tools box 
                  .pull-right.box-tools
                    button.btn.btn-primary.btn-sm.daterange.pull-right(data-toggle='tooltip', title='Date range')
                    |  
                    button.btn.btn-primary.btn-sm.pull-right(data-widget='collapse', data-toggle='tooltip', title='Collapse', style='margin-right: 5px')
                  // /. tools 
                  |  
                  i.fa.fa-map-marker
                  h3.box-title Visitors
                .box-body.no-padding
                  #world-map(style='height: 300px')
                  .table-responsive
                    // .table - Uses sparkline charts
                    table.table.table-striped
                    // /.table 
                // /.box-body
                .box-footer
                  button.btn.btn-info
                    i.fa.fa-download
                    |  Generate PDF
                  |  
                  button.btn.btn-warning
                    i.fa.fa-bug
                    |  Report Bug
              // /.box 
              // Chat box 
              .box.box-success
                .box-header
                  h3.box-title
                    i.fa.fa-comments-o
                    |  Chat
                  .box-tools.pull-right(data-toggle='tooltip', title='Status')
                #chat-box.box-body.chat
                  // chat item 
                  .item
                    img.online(src='img/avatar.png', alt='user image')
                    p.message
                      a.name(href='#')
                        small.text-muted.pull-right
                          i.fa.fa-clock-o
                          |  2:15
                        |  Mike Doe 
                      | I would like to meet you to discuss the latest news about the arrival of the new theme. They say it is going to be one the best themes on the market
                    .attachment
                      h4 Attachments:
                      p.filename Theme-thumbnail-image.jpg
                      .pull-right
                    // /.attachment 
                  // /.item 
                  // chat item 
                  .item
                    img.offline(src='img/avatar2.png', alt='user image')
                    p.message
                      a.name(href='#')
                        small.text-muted.pull-right
                          i.fa.fa-clock-o
                          |  5:15
                        |  Jane Doe 
                      | I would like to meet you to discuss the latest news about the arrival of the new theme. They say it is going to be one the best themes on the market
                  // /.item 
                  // chat item 
                  .item
                    img.offline(src='img/avatar3.png', alt='user image')
                    p.message
                      a.name(href='#')
                        small.text-muted.pull-right
                          i.fa.fa-clock-o
                          |  5:30
                        |  Susan Doe 
                      | I would like to meet you to discuss the latest news about the arrival of the new theme. They say it is going to be one the best themes on the market
                  // /.item 
                // /.chat 
                .box-footer
              // /.box (chat box) 
              // TO DO List 
              .box.box-primary
                .box-header
                  i.ion.ion-clipboard
                  h3.box-title To Do List
                  .box-tools.pull-right
                // /.box-header 
                .box-body
                // /.box-body 
                .box-footer.clearfix.no-border
              // /.box 
            // right col 
          // /.row (main row) 
        // /.content 
      // /.right-side 
    // ./wrapper 
