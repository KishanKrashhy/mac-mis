    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js')
    // jQuery UI 1.10.3 
    script(src='javascripts/jquery-ui-1.10.3.min.js', type='text/javascript')
    // Bootstrap 
    script(src='javascripts/bootstrap.min.js', type='text/javascript')
    // Morris.js charts 
    script(src='//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js')
    script(src='javascripts/plugins/morris/morris.min.js', type='text/javascript')
    // Sparkline 
    script(src='javascripts/plugins/sparkline/jquery.sparkline.min.js', type='text/javascript')
    // jvectormap 
    script(src='javascripts/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js', type='text/javascript')
    script(src='javascripts/plugins/jvectormap/jquery-jvectormap-world-mill-en.js', type='text/javascript')
    // fullCalendar 
    script(src='javascripts/plugins/fullcalendar/fullcalendar.min.js', type='text/javascript')
    // jQuery Knob Chart 
    script(src='javascripts/plugins/jqueryKnob/jquery.knob.js', type='text/javascript')
    // daterangepicker 
    script(src='javascripts/plugins/daterangepicker/daterangepicker.js', type='text/javascript')
    // Bootstrap WYSIHTML5 
    script(src='javascripts/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js', type='text/javascript')
    // iCheck 
    script(src='javascripts/plugins/iCheck/icheck.min.js', type='text/javascript')
    // AdminLTE App 
    script(src='javascripts/AdminLTE/app.js', type='text/javascript')
